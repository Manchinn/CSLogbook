# พอร์ตรับเข้า (host:container)
BACKEND_PORT=5000
FRONTEND_PORT=3000

# การเชื่อมต่อฐานข้อมูล (MySQL service)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=cslogbook
DB_USER=cslogbook
DB_PASSWORD=change_me
MYSQL_ROOT_PASSWORD=change_me_root

# การตั้งค่า Backend
NODE_ENV=production
BASE_URL=http://localhost:5000
API_PREFIX=/api
FRONTEND_URL=http://localhost:3000
PORT=5000
JWT_SECRET=replace_with_secure_random_32_chars
JWT_EXPIRES_IN=1d
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# อีเมล (กำหนดจริงเมื่อใช้งาน)
SENDGRID_API_KEY=
EMAIL_PROVIDER=
EMAIL_SENDER=no-reply@example.com
EMAIL_LOGIN_ENABLED=false
EMAIL_DOCUMENT_ENABLED=false
EMAIL_LOGBOOK_ENABLED=false
EMAIL_MEETING_ENABLED=false
LOG_ENABLE_CONSOLE=false

ACADEMIC_AUTO_UPDATE_ENABLED=false
ACADEMIC_AUTO_UPDATE_CRON=5 0 * * * 

# ค่าอื่นๆ ที่ backend ใช้ (เพิ่มได้ตามต้องการ)
# เช่น EMAIL_APPROVAL_ENABLED, FILE STORAGE CONFIG เป็นต้น

# ค่า Build สำหรับ Frontend
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_UPLOAD_URL=http://localhost:5000/uploads
