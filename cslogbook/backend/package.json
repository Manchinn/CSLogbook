{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "setup": "copy .env.example .env.development",
    "build": "set NODE_ENV=production&& node scripts/build.js",
    "dev": "set NODE_ENV=development&& nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "db:check:models": "node scripts/checkModels.js",
    "db:check": "cross-env NODE_ENV=development node scripts/checkDb.js",
    "db:check:all": "npm run db:check && npm run db:check:models",
    "db:sync": "cross-env NODE_ENV=development node scripts/syncDb.js",
    "migrate": "cross-env NODE_ENV=development sequelize-cli db:migrate",
    "migrate:undo": "cross-env NODE_ENV=development sequelize-cli db:migrate:undo",
    "migrate:create": "cross-env NODE_ENV=development sequelize-cli migration:generate --name",
    "migrate:status": "cross-env NODE_ENV=development sequelize-cli db:migrate:status",
    "seed": "cross-env NODE_ENV=development sequelize-cli db:seed:all",
    "seed:undo": "cross-env NODE_ENV=development sequelize-cli db:seed:undo",
    "seed:one": "cross-env NODE_ENV=development sequelize-cli db:seed --seed",
    "seed:create": "cross-env NODE_ENV=development sequelize-cli seed:generate --name",
    "seed:undo:all": "cross-env NODE_ENV=development sequelize-cli db:seed:undo:all",
    "seed:undo:one": "cross-env NODE_ENV=development sequelize-cli db:seed:undo --seed",
    "seed:prod": "cross-env NODE_ENV=production sequelize-cli db:seed:all",
    "seed:prod:one": "cross-env NODE_ENV=production sequelize-cli db:seed --seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "My project with nodemon",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "exceljs": "^4.4.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.47",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.13.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.17.1",
    "pg": "^8.13.3",
    "sequelize": "^6.37.6",
    "sequelize-cli": "^6.6.2",
    "socket.io": "^4.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "services/**/*.js",
      "controllers/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 35,
        "functions": 30,
        "branches": 20,
        "statements": 35
      }
    }
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "cross-env": "^7.0.3",
    "docx": "^9.5.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
